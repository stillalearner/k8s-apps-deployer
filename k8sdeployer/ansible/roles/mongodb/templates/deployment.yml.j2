apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ app_name }}
  namespace: {{ namespace }}
  labels:
    name: {{ app_name }}
spec:
  replicas: 1
  selector:
    matchLabels:
      name: {{ app_name }}
  template:
    metadata:
      labels:
        name: {{ app_name }}
    spec:
      containers:
      - name: {{ app_name }}
        image: {{ mongodb_image }}
        ports:
        - containerPort: 27017
          name: mongodb
        env:
        - name: MONGODB_USER
          valueFrom:
            secretKeyRef:
              name: {{ app_name }}
              key: mongodb-user
        - name: MONGODB_PASSWORD
          valueFrom:
            secretKeyRef:
              name: {{ app_name }}
              key: mongodb-password
        - name: MONGODB_DATABASE
          value: sampledb
        volumeMounts:
        - name: mongodb-data
          mountPath: /data/db
      volumes:
      - name: mongodb-data
        persistentVolumeClaim:
          claimName: {{ app_name }}-data
